# Ssuljaengi Environment Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# DATABASE
# =============================================================================
# SQLite (default for development)
DATABASE_URL=sqlite+pysqlite:///./dev.db

# PostgreSQL (recommended for production)
# DATABASE_URL=postgresql+psycopg://user:password@localhost:5432/ssuljaengi

# Auto-create database tables on startup (disable in production)
DB_AUTO_CREATE=true

# =============================================================================
# GOOGLE GEMINI API
# =============================================================================
# Option 1: Use Gemini API Key (simpler setup)
GEMINI_API_KEY=your-api-key-here

# Option 2: Use Google Cloud Project (recommended for production)
# GOOGLE_CLOUD_PROJECT=your-project-id
# GOOGLE_CLOUD_LOCATION=us-central1

# Model Configuration
GEMINI_TEXT_MODEL=gemini-2.5-flash
GEMINI_IMAGE_MODEL=gemini-2.5-flash-image

# Fallback models (used when primary model fails)
GEMINI_FALLBACK_TEXT_MODEL=gemini-2.0-flash
# GEMINI_FALLBACK_IMAGE_MODEL=

# =============================================================================
# RESILIENCE SETTINGS
# =============================================================================
# Retry configuration
GEMINI_MAX_RETRIES=3
GEMINI_INITIAL_BACKOFF_SECONDS=0.8
GEMINI_TIMEOUT_SECONDS=60

# Circuit breaker (prevents cascading failures)
GEMINI_CIRCUIT_BREAKER_THRESHOLD=5
GEMINI_CIRCUIT_BREAKER_TIMEOUT=60

# =============================================================================
# STORAGE
# =============================================================================
# Local media storage path
MEDIA_ROOT=./storage/media
MEDIA_URL_PREFIX=/media

# =============================================================================
# LOGGING
# =============================================================================
LOG_LEVEL=INFO

# =============================================================================
# TELEMETRY (Optional)
# =============================================================================
# Enable OpenTelemetry tracing
# OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4317
# OTEL_SERVICE_NAME=ssuljaengi

# Enable Arize Phoenix tracing
# PHOENIX_PROJECT_NAME=ssuljaengi
